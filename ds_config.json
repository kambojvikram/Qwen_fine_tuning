{
  "train_micro_batch_size_per_gpu": 1,
  "gradient_accumulation_steps": 8,
  "zero_optimization": {
    "stage": 1,
    "overlap_comm": true,
    "reduce_scatter": true,
    "contiguous_gradients": true
  },
  "bf16": { "enabled": true },
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 5e-6,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": 0.1
    }
  },
  "gradient_clipping": 1.0,
  "wall_clock_breakdown": false
}
